{
    "extends": [
        "tslint-config-airbnb",
        "tslint-plugin-prettier",
        "tslint-config-prettier"
    ],
    "rules": {
        "max-line-length": [
            true,
            120
        ],
        "import-name": false,
        "prettier": [
            true,
            {
                "tabWidth": 2,
                "bracketSpacing": true,
                "singleQuote": true
            }
        ]
    }
}